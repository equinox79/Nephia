#!/usr/bin/env perl

use strict;
use warnings;
use Nephia::Setup;
use Getopt::Long;

my $appname = shift @ARGV || '';
help() unless $appname =~ /^\w+/;

my $rolestr = '';

GetOptions(
    "with=s" => \$rolestr,
);

my @roles = split /,/, $rolestr;

my $setup = Nephia::Setup->new(
    roles => \@roles,
);
$setup->create( $appname );

sub help {
    print <<EOF;
Usage: 
nephia-setup AppName [--with SomeRoleClass,AnyRoleClass...]
EOF
    exit;
}
